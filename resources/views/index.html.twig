{% extends 'layout.html.twig' %}
{% set active = 'homepage' %}

{% block content %}

<h1></h1>
    {% if is_granted('ROLE_USER') %}
"{{ app.security.token.username }}".<br />
<a href="{{ path('logout') }}">{{ 'Logout'|trans }}</a>
    {% else %}
Your a not logged. Please <a href="{{ path('login') }}">{{ 'connect'|trans }}</a>
    {% endif %}


   {{ form_start(form) }} 
{{ form_errors(form) }}

<div class="grid grid-pad">
    <div class="col-1-3">
        <div class="content">
            <h4>Master Probe Unit</h4>
            <h4>+</h4>
             {{ form_row(form.probe, { 'id': 'no-of-probes' }) }}
            
            
            <h4>Probes</h4>
            <h4 id="master_unit_price"></h4>
        </div>
    </div>
    <div class="col-1-3">
        <div class="content">
             <h4>Probe Monitoring</h4>
            
             {{ form_row(form.subscription, { 'id': 'subscription-status' }) }}
             {{ form_row(form.subscription_period, { 'id': 'subscription-period','label_attr':{'class':'subscription_period-label'} }) }}
             
        </div>
    </div>
    <div class="col-1-3">
        <div class="content">
            <div>Probe Unit Sub-total <span id="probe_sub_total"></span></div>
            <div id="subscription_details"></div>
            <h3 id="total-cost"></h3>
            {{ form_row(form.submit, { 'label': 'Buy Now' }) }}
           
        </div>
    </div>
</div>
    {{ form_rest(form) }}
{{ form_end(form) }}

{% endblock %}
